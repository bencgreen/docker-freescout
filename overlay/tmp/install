#!/bin/bash

set -euo pipefail


#======================================================================================================================
# Get FreeScout code
#======================================================================================================================

REPO=https://github.com/freescout-helpdesk/freescout
TMP=$(mktemp -d)
cd ${TMP}
git clone ${REPO} ${TMP}
git checkout ${FREESCOUT_VERSION} && \
    rm -f .env.example .env.travis


#======================================================================================================================
# Install FreeScout
#======================================================================================================================

composer install
chown -R www:www .


#======================================================================================================================
# Move files to Nginx root
#======================================================================================================================

mv ./* /www


#======================================================================================================================
# Setup links to /data
#======================================================================================================================
