#!/bin/bash

set -euo pipefail


#======================================================================================================================
# Get FreeScout code
#======================================================================================================================

REPO=https://github.com/freescout-helpdesk/freescout
TMP=$(mktemp -d)
cd ${TMP}
git clone "${REPO}" .
git checkout "${FREESCOUT_VERSION}"


#======================================================================================================================
# Install FreeScout
#======================================================================================================================

rm -f .env.example .env.travis
composer install
chown -R www:www .


#======================================================================================================================
# Move files to Nginx root
#======================================================================================================================

mv ./* /www


#======================================================================================================================
# Setup links to /data
#======================================================================================================================
